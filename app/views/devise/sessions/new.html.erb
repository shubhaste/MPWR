
          
<div class="row">
      <div class="span12">
        <div class="span5 offset4 padding10">
          <div class="panel">
              <div class="panel-content">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => "form-horizontal col-md-offset-3"}) do |f| %>
                    <fieldset>
                        <legend>Account Login</legend>
                       <%= f.label :email %>    
                        <div class="input-control text" data-role="input-control">
                            <%= f.email_field :email, autofocus: true,:placeholder => "Enter Your Email" %>
                            <button class="btn-clear" tabindex="-1"></button>
                        </div>
                         <%= f.label :password %>
                        <div class="input-control password" data-role="input-control">
                            <%= f.password_field :password, autocomplete: "off",:placeholder => "Enter Your Password" %>
                            <button class="btn-reveal" tabindex="-1"></button>
                        </div>
                        <%= f.submit "Log in",:class => "info large" %>
                      </fieldset>
               <% end %>

              </div>
            </div>
        
          
        </div>
        </div>
      </div>

