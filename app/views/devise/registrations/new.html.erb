<div class="row">
      <div class="span12 padding5">
           <div class="span4 offset4">
          <div class="panel">
              <div class="panel-content">

               <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class => "form-horizontal col-md-offset-3"}) do |f| %>
                    <fieldset>
                        <legend>Sign up</legend>

                       <%= f.label :username %>    
                        <div class="input-control text" data-role="input-control">
                            <%= f.text_field :username, autofocus: true,:placeholder => "Enter Your Name" %>
                            <button class="btn-clear" tabindex="-1"></button>
                        </div> 
                       <%= f.label :email %>    
                        <div class="input-control text" data-role="input-control">
                            <%= f.email_field :email, autofocus: true,:placeholder => "Enter Your Email" %>
                            <button class="btn-reveal" tabindex="-1"></button>
                        </div>
                        <%= f.submit "Sign up",:class => "info large" %>
                      </fieldset>
               <% end %>

              </div>
            </div>
        
          
        </div>
        </div>
      </div>
