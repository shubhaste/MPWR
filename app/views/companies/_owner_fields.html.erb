 <div class="nested-fields">
  <%= f.inputs do %>
    <div class="row form-group">
          <div class="col-md-2 col-md-offset-2">
              <label  for="textinput">Owner Name</label>  
          </div>
           <div class="col-md-4">
               <%= f.text_field  :name,:class => "form-control input-md" %>
          </div>
         <div class="col-md-2 links">   
          <%= label_tag '' %>
          <%= link_to_remove_association "remove Owner", f,:class=>"btn btn-default" %>
        </div>
    </div>
    <div class="row form-group">
          <div class="col-md-2 col-md-offset-2">
                <%= f.label :nationality  %>
          </div>
           <div class="col-md-4">
           <%= f.select :nationality, options_for_select([["Somalia", "Somalia"],["USA","USA"],["Ethiopia", "Ethiopia"],["Kenya", "Kenya"],["Yemen", "Yemen"],["Saudi Arabia", "Saudi Arabia"],["Oman", "Oman"],["Qatar", "Qatar"]],
            :selected => f.object.nationality),:class => "form-control input-md" %>
          </div>
    </div>
     <div class="row form-group">
          <div class="col-md-2 col-md-offset-2">
                <%= f.label :gender  %>
          </div>
           <div class="col-md-4">
           <%= f.select :gender, options_for_select([["Male", "Male"],["Female","Female"]],
            :selected => f.object.gender),:class => "form-control input-md"  %>
          </div>
    </div>
    <div class="row form-group">
          <div class="col-md-2 col-md-offset-2">
               <%= f.label :phone  %>
          </div>
           <div class="col-md-4">
                 <%= f.text_field :phone,:class => "form-control input-md", :placeholder => "Primary Phone"  %>
          </div>
    </div>
  <div class="row form-group">
          <div class="col-md-2 col-md-offset-2">
               <%= f.label :email  %>
          </div>
           <div class="col-md-4">
                 <%= f.email_field :email,:class => "form-control input-md", :placeholder => "Email"  %>
          </div>
    </div>
    <div class="row form-group">
          <div class="col-md-2 col-md-offset-2">
               <%= f.label "National ID attachment"  %>
          </div>
           <div class="col-md-4">
                 <%= f.file_field :national_attachment %>
          </div>
            <div class="col-md-3">
              <a href="<%=f.object.national_attachment.url(:large)%>" rel="hermitage">
                 <%=f.template.image_tag(f.object.national_attachment.url(:thumb)) %>
            </a>
             
          </div>
    </div>
      <div class="row form-group">
          <div class="col-md-2 col-md-offset-2">
              <%= f.label :passport_attachment  %>
          </div>
           <div class="col-md-4">
                 <%= f.file_field :passport_attachment %>
          </div>
           <div class="col-md-3">
              <a href="<%=f.object.passport_attachment.url(:large)%>" rel="hermitage">
                <%=f.template.image_tag(f.object.passport_attachment.url(:thumb)) %>
            </a>
             
          </div>
    </div>
 
    <div class="row">
        <div class="col-md-2  col-md-offset-6 links">   
          &nbsp;
        </div>
    </div>
<% end %>

    </div>




