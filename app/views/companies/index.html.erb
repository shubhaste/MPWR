 <div class="container">
  <div class="row clearfix">
    <div>
    <legend>Business Application Form</legend>
  <table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Business Name</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td class="col-md-2"><%= company.name %></td>
          <td class="col-md-4"><%= company.address %></td>
          <td class="col-md-2">
          <% if can? :read, company %>
           <%= link_to(company, class: "btn btn-default") do %>
              View
            <% end %>
          <% end %>
          <% if can? :update, company %>
           <%= link_to(edit_company_path(company), class: "btn btn-default") do %>
              Edit
            <% end %>
          <% end %>
          <% if can? :destroy, company %>
            <%= link_to(company,method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default") do %>
              Delete
            <% end %>
            <% end %>
          <% if can? :approve, company %>
             <%= link_to(company,method: :approve, data: { confirm: 'Are you sure?' }, class: "btn btn-default") do %>
              Approve
            <% end %>
          <% end %>  
          <% if can? :reject, company %>
             <%= link_to(company,method: :reject, data: { confirm: 'Are you sure?' }, class: "btn btn-default") do %>
              Reject
            <% end %>
          <% end %> 
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
        <%= link_to(new_company_path, class: "btn btn-default") do %>
            New Business Application Form
          <% end %>

    </div>
   </div>
</div>
